@page "/authors"
@attribute [Authorize(Roles = "User")]

<PageTitle>Ebla - Authors</PageTitle>

<MudGrid>
    <MudItem xs="12" xl="8">
        <MudTable Items="AuthorList" Hover="true">
            <ToolBarContent>
                <MudText Typo="Typo.h6">Authors</MudText>
            </ToolBarContent>
            <HeaderContent>
                <MudTh>#</MudTh>
                <MudTh>Name</MudTh>
                <MudTh>Born</MudTh>
                <MudTh>Country</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="#">@context.Id</MudTd>
                <MudTd DataLabel="Name">@context.Name</MudTd>
                <MudTd DataLabel="Born">@context.Born.ToYear()</MudTd>
                <MudTd DataLabel="Country">@context.Country</MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager HidePageNumber="true" />
            </PagerContent>
        </MudTable>
    </MudItem>
</MudGrid>