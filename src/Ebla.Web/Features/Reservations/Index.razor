@page "/reservations"
@attribute [Authorize(Roles = "Administrator")]

<PageTitle>Ebla - Reservations</PageTitle>

<MudGrid>
    <MudItem sm="12" xl="8">
        <MudTable Items="ReservationList" Hover="true">
            <ToolBarContent>
                <MudText Typo="Typo.h6">Reservations</MudText>
            </ToolBarContent>
            <HeaderContent>
                <MudTh>#</MudTh>
                <MudTh>Created</MudTh>
                <MudTh>Expires</MudTh>
                <MudTh>Book</MudTh>
                <MudTh>User</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="#">@context.Id</MudTd>
                <MudTd DataLabel="Created">@context.CreatedOn.ToCustomDateFormat()</MudTd>
                <MudTd DataLabel="Expires">@context.ExpiresOn.ToCustomDateFormat()</MudTd>
                <MudTd DataLabel="Book">@context.Book.Title</MudTd>
                <MudTd DataLabel="User">@context.UserId</MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager HidePageNumber="true" />
            </PagerContent>
        </MudTable>
    </MudItem>
</MudGrid>