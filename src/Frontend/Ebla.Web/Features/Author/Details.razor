@page "/authors/{authorId:int}"
@attribute [Authorize(Roles = "User")]

@if (Author != null)
{
    <PageTitle>@Author.Name</PageTitle>

    <div class="row">
        <div class="col-sm-4">
            <img src="@Author.ImageLink" width="400" height="400" />
            <p>@Author.Name</p>
        </div>
    </div>
}
else
{
    <PageTitle>Ebla - Author Details</PageTitle>
}