@page "/authors"
@attribute [Authorize(Roles = "User")]

@using Ebla.Web.Features.Author.Components

<PageTitle>Ebla - Authors</PageTitle>

@if (Errors != null && Errors.Count() > 0)
{
    @foreach (var error in Errors)
    {
        <p class="error-message">@error</p>
    }
}

@if (Authors != null & Authors.Count() > 0)
{
    <div class="row">
        <div class="col-sm-6">
            <ListView Data="Authors" />
        </div>
    </div>
}
else
{
    <Spinner />
}