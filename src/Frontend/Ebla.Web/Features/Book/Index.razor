@page "/books"
@attribute [Authorize(Roles = "User")]

@using Ebla.Web.Features.Book.Components

<PageTitle>Ebla - Books</PageTitle>

@if (Errors != null && Errors.Count() > 0)
{
    @foreach (var error in Errors)
    {
        <p class="error-message">@error</p>
    }
}

@if (Books != null && Books.Count() > 0)
{
    <div class="row">
        <div class="col-xl-2 col-sm-4 mt-2">
            <Pagination />
        </div>
    </div>
    <div class="row">
        <div class="col-xl-4 col-sm-6">
            <ListView Data="Books" />
        </div>
        <div class="col-sm-2">
            <GenreFilter />
        </div>
    </div>
    <div class="row">
        <div class="col-xl-2 col-sm-4 mt-3">
            <Pagination />
        </div>
    </div>
}
else
{
    <Spinner />
}