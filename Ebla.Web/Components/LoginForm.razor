<div class="row">
    <div class="col-xl-3 col-lg-4 col-sm-6">
        <div class="card">
            <div class="card-header">Login</div>
            <div class="card-body">
                <EditForm Model="@ViewModel" OnValidSubmit="Submit">
                    @if (Errors != null && Errors.Count() > 0)
                    {
                        foreach (var error in Errors)
                        {
                            <p class="validation-message">@error</p>
                        }
                    }
                    <DataAnnotationsValidator />
                    <div class="mb-3">
                        <label class="form-label">Username</label>
                        <InputText type="text" class="form-control" @bind-Value="ViewModel.Username" />
                        <ValidationMessage For="@(() => ViewModel.Username)" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <InputText type="password" class="form-control" @bind-Value="ViewModel.Password" />
                        <ValidationMessage For="@(() => ViewModel.Password)" />
                    </div>
                    <button type="submit" class="btn btn-light">Submit</button>
                </EditForm>
            </div>
        </div>
    </div>
</div>