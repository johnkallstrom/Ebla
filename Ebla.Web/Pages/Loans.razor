@page "/loans"
@attribute [Authorize(Roles = "Administrator")]

<PageTitle>Ebla - Loans</PageTitle>

@if (Errors != null && Errors.Count() > 0)
{
    @foreach (var error in Errors)
    {
        <p class="error-message">@error</p>
    }
}
else
{
    <div class="row">
        <div class="col-sm-8">
            <LoansTable Data="@LoanList" />
        </div>
    </div>
}