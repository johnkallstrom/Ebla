@page "/libraries"
@attribute [Authorize(Roles = "User")]

<PageTitle>Ebla - Libraries</PageTitle>

@if (Errors != null && Errors.Count() > 0)
{
    @foreach (var error in Errors)
    {
        <p class="error-message">@error</p>
    }
}
else
{
    <div class="row">
        <div class="col-sm-6">
            <LibraryListView Data="LibraryList" />
        </div>
    </div>
}