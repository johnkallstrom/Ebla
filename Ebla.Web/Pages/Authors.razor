@page "/authors"
@attribute [Authorize(Roles = "User")]

<PageTitle>Ebla - Authors</PageTitle>

@if (Errors != null && Errors.Count() > 0)
{
    @foreach (var error in Errors)
    {
        <p class="error-message">@error</p>
    }
}
else
{
    <div class="row">
        <div class="col-sm-8">
            <AuthorsTable Data="@AuthorList" />
        </div>
    </div>
}